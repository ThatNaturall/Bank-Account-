import sqlite3

def create_database():
    conn = sqlite3.connect('bank_accounts.db')
    c = conn.cursor()

    # Create BankAccount table if it doesn't exist
    c.execute('''CREATE TABLE IF NOT EXISTS BankAccount (
                 account_id INTEGER PRIMARY KEY,
                 initial_amount REAL,
                 acct_name TEXT)''')

    conn.commit()
    conn.close()

if __name__ == "__main__":
    create_database()
